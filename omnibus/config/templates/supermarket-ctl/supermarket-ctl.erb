require "omnibus-ctl"

module Omnibus
  # This is coded to override omnibus-ctl 0.3.6, which is wayyyyy behind master, but
  # thats what Supermarket is pinned to (via omnibus-ctl software definition)
  class SupermarketCtl < Omnibus::Ctl

    # Need to allow '--accept-license' to be passed to the reconfigure command
    def initialize(name, service_commands=true)
      super
      @category_command_map["general"]["reconfigure"][:arity] = 2
    end

    # Override reconfigure to first perform license-acceptance flow
    def reconfigure(*args)
      require "license_acceptance/acceptor"
      LicenseAcceptance::Acceptor.check_and_persist!("supermarket", "<%= version %>")

      super
    end

  end
end

# Copied the logic of https://github.com/chef/omnibus-ctl/blob/master/bin/omnibus-ctl
ctl = Omnibus::SupermarketCtl.new("supermarket")
ctl.load_files("<%= embedded_service %>/omnibus-ctl")
ctl.run(ARGV)
exit 0
